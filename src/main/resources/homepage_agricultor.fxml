<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Test.HomeAgricultorController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">

    <!-- Cabeçalho -->
    <Label text="Bem-vindo Agricultor"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2e8b57;"/>

    <!-- Área principal -->
    <GridPane hgap="20" vgap="20" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" prefWidth="200"/>
            <ColumnConstraints halignment="CENTER" prefWidth="200"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints prefHeight="100"/>
            <RowConstraints prefHeight="100"/>
        </rowConstraints>

        <!-- Primeira linha -->
        <Button text="Ler cronograma"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#lerCronograma"
                GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <Button text="Registar Proposta de plantio"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#registarPropostaPlantio"
                GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Segunda linha -->
        <Button text="Registar dados"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#registarDados"
                GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <Button text="Registar Terreno"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#registarTerreno"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Terceira linha (centralizado) -->
        <Button text="Consultar Propostas de Plantio"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#consultarPropostas"
                GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
    </GridPane>
</VBox>