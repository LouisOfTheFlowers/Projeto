<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Cursor?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Test.HomeAgricultorController"
            style="-fx-background-color: #fcfbe9; -fx-font-family: 'Segoe UI', Tahoma, Geneva, sans-serif;">

    <!-- Top section with back button aligned left -->
    <top>
        <HBox alignment="TOP_LEFT" style="-fx-padding: 20;">
            <Button fx:id="backButton" onAction="#goBack"
                    style="-fx-background-color: transparent; -fx-text-fill: #2e8b57;" text="Logout">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <graphic>
                    <ImageView fx:id="backIcon" fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                        <Image url="Icons/back.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Center section with your main content -->
    <center>
        <VBox spacing="30" alignment="CENTER" style="-fx-padding: 0 40 40 40;">
            <!-- Cabeçalho -->
            <Label text="Bem-vindo, Agricultor"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2e8b57; -fx-padding-bottom: 20px;"/>

            <!-- Área principal -->
            <GridPane hgap="20" vgap="30" alignment="CENTER" style="-fx-padding: 20;">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" prefWidth="250"/>
                    <ColumnConstraints halignment="CENTER" prefWidth="250"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints prefHeight="120"/>
                    <RowConstraints prefHeight="120"/>
                    <RowConstraints prefHeight="120"/>
                </rowConstraints>

                <!-- Primeira linha -->
                <Button fx:id="lerCronogramaButton"
                        text="Ler cronograma"
                        onAction="#lerCronograma"
                        GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>

                <Button fx:id="registarPropostaPlantioButton"
                        text="Registar Proposta de Plantio"
                        onAction="#registarPropostaPlantio"
                        GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>

                <!-- Segunda linha -->
                <Button fx:id="registarDadosButton"
                        text="Registar dados"
                        onAction="#registarDados"
                        GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>

                <Button fx:id="registarTerrenoButton"
                        text="Registar Terreno"
                        onAction="#registarTerreno"
                        GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>

                <!-- Terceira linha (centralizado) -->
                <Button fx:id="consultarPropostasButton"
                        text="Consultar Propostas de Plantio"
                        onAction="#consultarPropostas"
                        GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
