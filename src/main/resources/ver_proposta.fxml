<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.Cursor?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Test.VerPropostaController"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-background-color: #fcfbe9; -fx-padding: 20;">

    <!-- Cabeçalho com botão de voltar -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 20 0;">
        <Button fx:id="backButton" onAction="#goBack"
                style="-fx-background-color: transparent; -fx-text-fill: #2e8b57;" text="Voltar">
            <cursor><Cursor fx:constant="HAND"/></cursor>
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <Image url="Icons/back.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Label text="Detalhes da Proposta" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Dados da proposta -->
    <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
        <Label text="Nome da Cultura: Milho"/>
        <Label text="Data Proposta: 2025-04-22"/>
        <Label text="Área (hectares): 2.5"/>
        <Label text="Descrição: Plantio de milho de ciclo curto, com previsão de colheita em 90 dias."/>
        <Label text="Estado: Em Análise" fx:id="estadoLabel"/>
    </VBox>

    <!-- Botões de ação -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Aprovar Proposta" onAction="#aprovarProposta"
                style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold;"/>
        <Button text="Recusar Proposta" onAction="#recusarProposta"
                style="-fx-background-color: #b22222; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
