    <children>
        <Label text="Consultar Propostas de Plantio" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="tablePropostas" prefHeight="400.0" prefWidth="1400.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colHorticolas" prefWidth="300.0" text="HortÃ­colas" />
