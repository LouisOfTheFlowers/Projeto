<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Test.AcoesCronogramaController"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-background-color: #fcfbe9; -fx-padding: 20;">

    <!-- Cabeçalho com botão de voltar no topo esquerdo -->
    <HBox alignment="TOP_LEFT" style="-fx-padding: 0 0 20 0;">
        <Button fx:id="backButton" onAction="#goBack"
                style="-fx-background-color: transparent; -fx-text-fill: #2e8b57;" text="Voltar">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                    <Image url="@Icons/back.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Título principal centralizado -->
    <Label text="Cronogramas"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"
           alignment="CENTER"/>

    <!-- Área de ações alinhada à esquerda -->
    <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 0 0 20 20;">
        <Label text="Ações em Cronogramas"
               style="-fx-font-size: 18px; -fx-text-fill: #666;"/>

        <!-- Botão de ação -->
        <Button fx:id="lerCronogramaButton"
                text="Ler Cronogramas"
                onAction="#abrirLerCronograma"
                style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 30;">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </VBox>
</VBox>