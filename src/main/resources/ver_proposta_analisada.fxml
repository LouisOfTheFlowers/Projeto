<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.Cursor?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Test.VerPropostaAnalisadaController"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-background-color: #fcfbe9; -fx-padding: 20;">

    <!-- Cabeçalho com botão de voltar -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 20 0;">
        <Button fx:id="backButton" onAction="#goBack"
                style="-fx-background-color: transparent; -fx-text-fill: #2e8b57;" text="Voltar">
            <cursor><Cursor fx:constant="HAND"/></cursor>
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <Image url="Icons/back.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Label text="Detalhes da Proposta Analisada" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Dados da proposta -->
    <VBox spacing="10" alignment="TOP_LEFT"
          style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
        <Label fx:id="nomeCulturaLabel" text="Nome da Cultura:"/>
        <Label fx:id="dataPropostaLabel" text="Altura do Ano:"/>
        <Label fx:id="areaLabel" text="Terreno ID:"/>
        <Label fx:id="descricaoLabel" text="Gestor ID:"/>
        <Label fx:id="estadoLabel" text="Estado:"/>
    </VBox>

</VBox>
